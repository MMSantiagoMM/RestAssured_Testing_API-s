<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite" >
    <test name="test-people">
        <parameter name="skin-color" value="gold"/>
        <parameter name="film-size" value="6"/>
        <classes>
            <class name="tests.TestPeople"/>
        </classes>
    </test>
    <test name="test-films">
        <classes>
            <class name="tests.TestFilm"/>
        </classes>
    </test>
    <test name="test-planets">
        <parameter name="gravity" value="1.1 standard"/>
        <parameter name="terrains" value="tundra, ice caves, mountain ranges"/>
        <classes>
            <class name="tests.TestPlanet"/>
        </classes>
    </test>
    <test name="film-seven">
        <classes>
            <class name="tests.TestFilmSeven404"/>
        </classes>
    </test>
    <test name="test-planet-url">
        <classes>
            <class name="tests.TestPlanetUrl"/>
        </classes>
    </test>

</suite>